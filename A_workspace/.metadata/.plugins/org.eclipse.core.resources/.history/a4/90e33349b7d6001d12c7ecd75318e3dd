package ex1;

public class Variable {

	public static void main(String[] args) {

		//변수 n1과 n2에 값을 넣고 n1과 n2사이의 합을 계산하여 
		//그 결과를 출력하는 프로그램
		//단, 5와 2처럼 큰 수를 먼저 입력받아도 같은 결과가 나와야 함
		
		int n1 = 0, n2 = 0;
		int result = 0;
		n1 = 2;
		n2 = 5;
		
		if(n1>n2) {
			int n3 = n1;
			n1 = n2;
			n2 = n3;
		}
		for(int i = n1; i <= n2; i++) {
			result += i;
		}
		System.out.println("결과 : "+result);
	}

}
